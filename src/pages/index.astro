---
import BasicLayout from "../layouts/Basic.astro";
import { Github, Paperclip, Linkedin, ExternalLink } from "@geist-ui/icons";
import VideoHero from "../components/VideoHero";
---

<BasicLayout>
  <div class="flex min-h-screen flex-col">
    <VideoHero client:only="react" />

    <div class="flex flex-grow flex-col justify-center">
      <!-- Header -->
      <div class="py-4">
        <div class="container">
          <h1 class="text-6xl font-bold tracking-tight">George Butler</h1>
          <h2 class="mt-3 text-2xl font-medium tracking-tight">
            Computer Graphics Engineer
          </h2>
          <div class="mt-3 flex flex-row gap-4">
            <a href="https://github.com" target="_blank" class="inline-block">
              <span class="sr-only">Open my Github in a new tab</span>
              <Github />
            </a>
            <a href="https://linkedin.com" target="_blank" class="inline-block">
              <span class="sr-only">Open my Linkedin in a new tab</span>
              <Linkedin />
            </a>
            <a href="https://linkedin.com" target="_blank" class="inline-block">
              <span class="sr-only">Download or view my Resume</span>
              <Paperclip />
            </a>
          </div>
          <div class="mt-8 flex flex-col gap-1 font-bold tracking-tighter">
            <a href="/blog" class="inline-block text-sm">Projects</a>
            <a href="/blog" class="inline-block text-sm">Blog </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="py-4">
      <div class="container">
        <div class="flex flex-col items-center gap-2 text-xs">
          <p class="max-w-xs select-none leading-normal">
            &copy; {new Date().getFullYear()} George Butler.
          </p>
        </div>
      </div>
    </div>
  </div>
</BasicLayout>
