---
import { Github, Paperclip, Linkedin } from "@geist-ui/icons";
import BasicLayout from "../layouts/Basic.astro";
import VideoHero from "../components/VideoHero";
import HoverLink from "../components/HoverLink";
import HoverIcon from "../components/HoverIcon";
---

<BasicLayout>
  <div class="flex min-h-screen flex-grow flex-col">
    <VideoHero client:only="react" />

    <div class="flex flex-grow flex-col justify-center">
      <!-- Header -->
      <div class="py-4">
        <div class="container">
          <h1 class="text-6xl font-bold tracking-tight">George Butler</h1>
          <h2 class="text-2xl font-medium tracking-tight">
            Computer Graphics Engineer
          </h2>
          <div class="mt-6 flex flex-row gap-4">
            <HoverIcon
              client:only="react"
              href="https://github.com/georgebutler"
              target="_blank"
            >
              <span class="sr-only">Open my Github in a new tab</span>
              <Github />
            </HoverIcon>
            <HoverIcon
              client:only="react"
              href="https://www.linkedin.com/in/georgelbutler/"
              target="_blank"
            >
              <span class="sr-only">Open my Linkedin in a new tab</span>
              <Linkedin />
            </HoverIcon>
            <HoverIcon
              client:only="react"
              href="/downloads/George_Butler_Resume.pdf"
              target="_blank"
            >
              <span class="sr-only">Download or view my Resume</span>
              <Paperclip />
            </HoverIcon>
          </div>
          <div>
            <div class="mt-8 flex flex-col gap-2 font-bold tracking-tighter">
              <HoverLink client:only="react" href="/blog" target="" index={1}>
                Blog
              </HoverLink>
              <HoverLink
                client:only="react"
                href="/experiments"
                target=""
                index={2}
              >
                Experiments
              </HoverLink>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="py-4">
      <div class="container">
        <div class="flex flex-col items-center gap-2 text-xs">
          <p class="max-w-xs select-none leading-normal opacity-50">
            &copy; {new Date().getFullYear()} George Butler.
          </p>
        </div>
      </div>
    </div>
  </div>
</BasicLayout>
