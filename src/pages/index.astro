---
import BasicLayout from "../layouts/Basic.astro";
import Hero from "../components/Hero";
import { Github, Paperclip, Linkedin } from "@geist-ui/icons";
import VideoHero from "../components/VideoHero";
---

<BasicLayout>
  <div class="min-h-screen flex flex-col">
    <VideoHero client:only="react" />

    <div class="flex-grow flex flex-col justify-center">
      <!-- Header -->
      <div class="py-4">
        <div class="container">
          <h1 class="text-6xl font-bold tracking-tight">
            George Butler
          </h1>
          <h2 class="mt-3 text-2xl font-medium tracking-tight">
            Computer Graphics Engineer
          </h2>
          <div class="mt-3 flex flex-row gap-4">
            <a href="https://github.com" target="_blank" class="inline-block">
              <span class="sr-only">Github</span>
              <Github />
            </a>
            <a href="https://linkedin.com" target="_blank" class="inline-block">
              <span class="sr-only">Linkedin</span>
              <Linkedin />
            </a>
            <a href="https://linkedin.com" target="_blank" class="inline-block">
              <span class="sr-only">Resume</span>
              <Paperclip />
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="py-4">
      <div class="container">
        <div class="flex flex-col items-center gap-2 text-xs">
          <p class="max-w-xs leading-normal select-none">
            &copy; {new Date().getFullYear()} George Butler.
          </p>
        </div>
      </div>
    </div>
  </div>
</BasicLayout>
